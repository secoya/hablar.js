{
	"compilerOptions": {
		"strictNullChecks": true,
		"target": "es5",
		"declaration": true,
		"noEmit": false,
		"newLine": "LF",
		"outDir": "lib",
		"noImplicitAny": true,
		"allowJs": false,
		"moduleResolution": "node",
		"baseUrl": "./src",
		"importHelpers": true,
		"esModuleInterop": true,
		"paths": {
			"jison": ["../typings/jison.d.ts"],
			"recast": ["../typings/recast.d.ts"]
		},
		"lib": ["es6", "es2015"]
	},
	"include": ["__tests__/**/*.ts"],
	"files": ["src/index.ts"]
}
