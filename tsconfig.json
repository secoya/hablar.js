{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"lib": ["es2018"],
		"importHelpers": true,
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"outDir": "dist",
		"rootDir": "src",
		"baseUrl": ".",
		"esModuleInterop": true,
		"paths": {
			"recast": [
				"./types/packages/recast.d.ts"
			]
		},
	},
	"include": ["src/*.ts", "src/**/*.ts"]
}
